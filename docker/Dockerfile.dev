# Development Dockerfile with hot-reload
FROM node:20-alpine

# Install live-server globally for hot-reload
RUN npm install -g live-server

# Set working directory
WORKDIR /app

# Copy frontend files
COPY frontend/ /app/

# Expose port 7914
EXPOSE 7914

# Run live-server with hot-reload on port 7914
CMD ["live-server", "--port=7914", "--host=0.0.0.0", "--no-browser", "--watch=/app"]

